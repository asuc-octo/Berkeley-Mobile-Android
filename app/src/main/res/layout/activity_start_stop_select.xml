<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.asuc.asucmobile.main.StartStopSelectActivity">

    <LinearLayout
        android:id="@+id/start_dest_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/ASUC_blue"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_action_back"
                android:contentDescription="@string/content_desc" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ASUC_blue"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:columnCount="5"
            android:rowCount="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="top"
                    android:layout_column="0"
                    android:layout_row="0" />

                <Button
                    android:id="@+id/start_stop"
                    android:layout_height="36dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/grizzly_gray"
                    android:background="@color/pavan_light"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:layout_row="0"
                    android:layout_width="225dp" />
                <ImageButton
                    android:id="@+id/my_location"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_my_location_black_24dp"
                    android:layout_column="4"
                    android:layout_row="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="top"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/dest_stop"
                    android:layout_width="fill_parent"
                    android:layout_height="36dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="start|center"
                    android:textColor="@color/grizzly_gray"
                    android:background="@color/pavan_light"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnSpan="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/depart_at"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="top"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Button
                    android:id="@+id/departure_time"
                    android:layout_width="fill_parent"
                    android:layout_height="36dp"
                    android:gravity="start|center"
                    android:textColor="@color/grizzly_gray"
                    android:background="@color/pavan_light"
                    android:layout_row="2" />

        </GridLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/navigate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="@color/two_chainz_gold" />

    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/start_dest_control" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/map"
        android:id="@+id/refresh"></LinearLayout>

</RelativeLayout>
