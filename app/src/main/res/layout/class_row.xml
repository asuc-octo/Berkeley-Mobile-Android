<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/class_row"
    android:background="@drawable/bordered_rectangle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/filterColor"
        android:background="@color/colorPrimary"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:color="@color/green"
        android:text="" />

    <TextView
        android:id="@+id/excerciseTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:layout_marginLeft="10dp"

        android:text="07:15 - 08:15"
        android:textSize="14sp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_column="2">
        <TextView
            android:id="@+id/excerciseName"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"

            android:text="Cycle Fusion"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/excerciseTrainer"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"

            android:text="Cycle Fusion"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="12sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/excerciseLocation"
        android:layout_height="match_parent"
        android:layout_column="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine"
        android:text="Court #5, RSF"
        android:textSize="14sp"
        android:layout_weight="1"/>
</TableRow>
